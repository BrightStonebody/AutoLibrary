<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginTop="3dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp">

        <ImageView
            android:id="@+id/book_image"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="#000000"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:typeface="monospace"
            android:layout_toStartOf="@+id/book_id"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/book_image"
            android:text="title"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/book_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/book_title"
            android:layout_margin="2dp"
            android:text="id"
            android:textColor="#5cb0d7" />

        <TextView
            android:id="@+id/book_short_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/book_author"
            android:layout_alignEnd="@+id/book_id"
            android:layout_alignStart="@+id/book_title"
            android:layout_below="@+id/book_title"
            android:layout_marginTop="3dp"
            android:lines="2"
            android:ellipsize="end"
            android:text="desc_desc_desc_desc_desc_desc_desc_desc_desc_desc_"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/book_type"
            android:layout_marginEnd="5dp"
            android:layout_alignBottom="@+id/book_image"
            android:layout_alignStart="@+id/book_title"
            android:lines="1"
            android:ellipsize="end"
            android:text="author"
            android:textColor="#a1000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/book_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/book_image"
            android:layout_alignEnd="@+id/book_id"
            android:background="@drawable/rectangle"
            android:gravity="center"
            android:lines="1"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="type"
            android:textColor="#a1000000"
            android:textSize="15sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
