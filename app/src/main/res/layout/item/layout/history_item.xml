<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#fff"
    android:padding="10dp">

    <TextView
        android:id="@+id/history_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:text="title"
        android:textColor="#000"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/history_book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/history_book_title"
        android:layout_below="@id/history_book_title"
        android:text="author"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/return_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/history_book_author"
        android:text="还书日期:"
        android:textSize="17sp"
        android:gravity="bottom"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/history_book_title"
        android:text="not returned"
        android:textColor="#990033"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/publisher"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/return_date"
        android:text="***"
        android:textSize="15sp" />
</RelativeLayout>
