<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hsm.zzh.cl.autolibrary.view.NoScrollViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nav_layout">

    </com.hsm.zzh.cl.autolibrary.view.NoScrollViewPager>

    <android.support.v7.widget.CardView
        android:id="@+id/nav_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.hsm.zzh.cl.autolibrary.view.MainNavItem
                android:id="@+id/item_1"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                app:hint_text="xxx"
                app:no_selected_image="@color/colorPrimary"
                app:selected_image="@color/colorAccent"/>
            <com.hsm.zzh.cl.autolibrary.view.MainNavItem
                android:id="@+id/item_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="center_horizontal"
                app:hint_text="xxx"
                app:no_selected_image="@color/colorPrimary"
                app:selected_image="@color/colorAccent"/>
            <com.hsm.zzh.cl.autolibrary.view.MainNavItem
                android:id="@+id/item_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="center_horizontal"
                app:hint_text="xxx"
                app:no_selected_image="@color/colorPrimary"
                app:selected_image="@color/colorAccent"/>
            <com.hsm.zzh.cl.autolibrary.view.MainNavItem
                android:id="@+id/item_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="center_horizontal"
                app:hint_text="xxx"
                app:no_selected_image="@color/colorPrimary"
                app:selected_image="@color/colorAccent"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>